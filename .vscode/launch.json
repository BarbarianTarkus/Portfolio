    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run dev -- --host",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:5173",
            "pathMappings": [{
                "url": "http://localhost:5173",
                "path": "${workspaceFolder}"
            }]
        },
    ]
